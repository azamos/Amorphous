{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Node.js",
        "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
        "args": ["index.js"],
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start"],
        "env": {
          "NODE_ENV": "local"
        },
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  